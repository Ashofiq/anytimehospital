<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorLoginRegActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/doctheme"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/doctor_text"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Login"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/doctor_name"
            android:layout_width="350dp"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/my_edit_text_border"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Name" />

        <EditText
            android:id="@+id/doctor_phone"
            android:layout_width="350dp"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:background="@drawable/my_edit_text_border"
            android:hint="Phone"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/doctor_email"
            android:background="@drawable/my_edit_text_border"
            android:layout_width="350dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/doctor_password"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/my_edit_text_border"
            android:layout_width="350dp"
            android:textSize="20sp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/doctor_address"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/my_edit_text_border"
            android:layout_width="350dp"
            android:textSize="20sp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Ex: Uttara" />


        <Button
            android:id="@+id/doctor_login_btn"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Login" />

        <TextView
            android:id="@+id/doctor_reg_link"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont Have a account?"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/doctor_reg_btn"
            android:background="@drawable/rounded_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Register Now" />

    </LinearLayout>

</RelativeLayout>